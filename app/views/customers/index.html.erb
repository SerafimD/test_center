<%= data_for('Customers') do |t| %>
    <div class="col-lg-12">
      <!-- col-lg-12 start here -->
      <div class="panel panel-default toggle panelMove panelClose panelRefresh">
        <!-- Start .panel -->
        <div class="panel-heading">
          <h4 class="panel-title">Responsive example</h4>
        </div>
        <div class="panel-body">
          <table id="responsive-datatables" class="table table-bordered table-striped table-hover dt-responsive non-responsive" cellspacing="0" width="100%">
            <h1>Заказчики</h1>
            <thead>
            <tr>
              <th>Type</th>
              <th>Name</th>
              <th>Fio</th>
              <th>Phone</th>
              <th>Email</th>
              <th>Address</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.type_name %></td>
                  <td><%= customer.name %></td>
                  <td><%= customer.fio %></td>
                  <td><%= customer.phone %></td>
                  <td><%= customer.email %></td>
                  <td><%= customer.address %></td>
                  <td><%= link_to 'Show', customer %></td>
                  <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
                  <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Вы уверены?' } %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <br>
    <%= link_to 'New Customer', new_customer_path %>
<% end %>
