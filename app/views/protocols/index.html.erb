<%- model_class = Protocol -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <!--<th><%= model_class.human_attribute_name(:id) %></th>-->
      <th><%= model_class.human_attribute_name(:main_number) %></th>
      <th><%= model_class.human_attribute_name(:second_number) %></th>
      <th><%= model_class.human_attribute_name(:customer_id) %></th>
      <th><%= model_class.human_attribute_name(:sample) %></th>
      <th><%= model_class.human_attribute_name(:date_receipt) %></th>
      <th><%= model_class.human_attribute_name(:date_transfer_lab) %></th>
      <th><%= model_class.human_attribute_name(:date_result) %></th>
      <th><%= model_class.human_attribute_name(:date_pay) %></th>
      <th><%= model_class.human_attribute_name(:urgent) %></th>
      <th><%= model_class.human_attribute_name(:paid) %></th>
      <th><%= model_class.human_attribute_name(:send_to_customer) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:document) %></th>
      <!--<th><%= model_class.human_attribute_name(:created_at) %></th>-->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @protocols.each do |protocol| %>
      <tr>
        <td><%= link_to protocol.id, protocol_path(protocol) %></td>
        <td><%= protocol.main_number %></td>
        <td><%= protocol.second_number %></td>
        <td><%= protocol.customer_id %></td>
        <td><%= protocol.sample %></td>
        <td><%= protocol.date_receipt %></td>
        <td><%= protocol.date_transfer_lab %></td>
        <td><%= protocol.date_result %></td>
        <td><%= protocol.date_pay %></td>
        <td><%= protocol.urgent %></td>
        <td><%= protocol.paid %></td>
        <td><%= protocol.send_to_customer %></td>
        <td><%= protocol.comment %></td>
        <td><%= protocol.document %></td>
        <td><%=l protocol.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      protocol_path(protocol), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_protocol_path(protocol), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      protocol_path(protocol),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_protocol_path,
            :class => 'btn btn-primary' %>
